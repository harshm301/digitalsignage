<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/black"
        android:layout_weight="5"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ImageView"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:visibility="visible" />

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="@id/mailId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/copyright" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/copyright"
            style="@style/Footer_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright: @copyright Kandala Technologies Pvt Ltd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/logo"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/website"
            style="@style/Footer_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/copyright"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="2dp"
            app:layout_constraintStart_toEndOf="@id/logo"
            android:text="website: “https://www.adbeets.in“"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mobilenumber"
            style="@style/Footer_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/website"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="2dp"
            app:layout_constraintStart_toEndOf="@id/logo"
            android:text="mobile:”123456789”"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mailId"
            style="@style/Footer_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mobilenumber"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="2dp"
            app:layout_constraintStart_toEndOf="@id/logo"
            android:text="info@adbeets.in“"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>